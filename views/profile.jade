extends layout

block content
  div.container
    div.page-header.text-center
      h1
        span.fa.fa-anchor
        | Profile Page
      a.btn.btn-default.btn-sm(href="/logout") Logout
    div.row
      div.col-sm-6
        div.well
          h3
            span.fa.fa-user
            | Local
          p
            strong id: 
            | #{user._id}
          p
            strong email: 
            | #{user.local.email}
          p
            strong password: 
            | #{user.local.password}
